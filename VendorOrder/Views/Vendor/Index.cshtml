@{
  Layout = "_Layout";
}
<div class ="container">
  <h3>List Of Vendors:</h3>
  @using VendorOrder.Models;
  @if(Model.Count==0)
  {
    <h4> There are no vendors yet.Add vendors to display the vendors list</h4>
  }
  @foreach(Vendor vendor in Model)
  {
    <p><a href='/vendors/@vendor.Id'>@vendor.VName</a></p>
  }
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Clear All Vendors</button>
  </form>
  <div class="links">
  <p><a href="/">Back Home</a></p>
  </div>
</div>  

